<div class="line number1 index0 alt2"><code class="comments">// Client side C/C++ program to demonstrate Socket programming </code></div>
<div class="line number2 index1 alt1"><code class="preprocessor">#include &lt;stdio.h> </code></div>
<div class="line number3 index2 alt2"><code class="preprocessor">#include &lt;sys/socket.h> </code></div>
<div class="line number4 index3 alt1"><code class="preprocessor">#include &lt;arpa/inet.h> </code></div>
<div class="line number5 index4 alt2"><code class="preprocessor">#include &lt;unistd.h> </code></div>
<div class="line number6 index5 alt1"><code class="preprocessor">#include &lt;string.h> </code></div>
<div class="line number7 index6 alt2"><code class="preprocessor">#define PORT 8080 </code></div>
<div class="line number8 index7 alt1"><code class="undefined spaces">&nbsp;&nbsp;</code>&nbsp;</div>
<div class="line number9 index8 alt2"><code class="color1 bold">int</code> <code class="plain">main(</code><code class="color1 bold">int</code> <code class="plain">argc, </code><code class="color1 bold">char</code> <code class="keyword bold">const</code> <code class="plain">*argv[]) </code></div>
<div class="line number10 index9 alt1"><code class="plain">{ </code></div>
<div class="line number11 index10 alt2"><code class="undefined spaces">&nbsp;&nbsp;&nbsp;&nbsp;</code><code class="color1 bold">int</code> <code class="plain">sock = 0, valread; </code></div>
<div class="line number12 index11 alt1"><code class="undefined spaces">&nbsp;&nbsp;&nbsp;&nbsp;</code><code class="keyword bold">struct</code> <code class="plain">sockaddr_in serv_addr; </code></div>
<div class="line number13 index12 alt2"><code class="undefined spaces">&nbsp;&nbsp;&nbsp;&nbsp;</code><code class="color1 bold">char</code> <code class="plain">*hello = </code><code class="string">"Hello from client"</code><code class="plain">; </code></div>
<div class="line number14 index13 alt1"><code class="undefined spaces">&nbsp;&nbsp;&nbsp;&nbsp;</code><code class="color1 bold">char</code> <code class="plain">buffer[1024] = {0}; </code></div>
<div class="line number15 index14 alt2"><code class="undefined spaces">&nbsp;&nbsp;&nbsp;&nbsp;</code><code class="keyword bold">if</code> <code class="plain">((sock = socket(AF_INET, SOCK_STREAM, 0)) &lt; 0) </code></div>
<div class="line number16 index15 alt1"><code class="undefined spaces">&nbsp;&nbsp;&nbsp;&nbsp;</code><code class="plain">{ </code></div>
<div class="line number17 index16 alt2"><code class="undefined spaces">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</code><code class="functions bold">printf</code><code class="plain">(</code><code class="string">"\n Socket creation error \n"</code><code class="plain">); </code></div>
<div class="line number18 index17 alt1"><code class="undefined spaces">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</code><code class="keyword bold">return</code> <code class="plain">-1; </code></div>
